{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["jest"],
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "baseUrl": ".",
    "paths": {
      "bryntum-scheduler": [
        "apps/commitments-reader/src/scheduler/scheduler.module.js",
      ],
      "@digital-first/df-layouts": ["libs/df-layouts/src/index.ts"],
      "@digital-first/df-theme": ["libs/df-theme/src/index.ts"],
      "@digital-first/df-discussion": ["libs/df-discussion/src/index.ts"],
      "@digital-first/df-sharepoint": ["libs/df-sharepoint/src/index.ts"],
      "@digital-first/df-moment": ["libs/df-moment/src/index.ts"],
      "@digital-first/df-pipes": ["libs/df-pipes/src/index.ts"],
      "@digital-first/df-utils": ["libs/df-utils/src/index.ts"],
      "@digital-first/df-pages": ["libs/df-pages/src/index.ts"],
      "@digital-first/df-dialogs": ["libs/df-dialogs/src/index.ts"],
      "@digital-first/df-components": ["libs/df-components/src/index.ts"],
      "@digital-first/df-logging": ["libs/df-logging/src/index.ts"],
      "@digital-first/df-auth": ["libs/df-auth/src/index.ts"],
      "@digital-first/df-app-tokens": ["libs/df-app-tokens/src/index.ts"],
      "@digital-first/df-tag": ["libs/df-tag/src/index.ts"],
      "@digital-first/df-datatable": ["libs/df-datatable/src/index.ts"],
      "@digital-first/df-buttons": ["libs/df-buttons/src/index.ts"],
      "@digital-first/df-map": ["libs/df-map/src/index.ts"],
      "@digital-first/df-refiner": ["libs/df-refiner/src/index.ts"],
      "@digital-first/df-app-core": ["libs/df-app-core/src/index.ts"],
      "core-js/es7/reflect": ["node_modules/core-js/proposals/reflect-metadata"],
      "core-js/es6/*": ["node_modules/core-js/es/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
