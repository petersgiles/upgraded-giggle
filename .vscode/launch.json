{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug-jest-lib",
      "type": "node",
      "request": "launch",
      "args": [
        "test",
        "--passWithNoTests",
        "--no-code-coverage",
        "--runInBand",
        "--testFile"
      ],
      "cwd": "${workspaceFolder}/digital-first",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/digital-first/node_modules/@angular/cli/bin/ng",
      "smartStep": true
    },
    {
      "name": "Debug Node App",
      "type": "node",
      "request": "attach",
      "port": 7777
    }
  ]
}
